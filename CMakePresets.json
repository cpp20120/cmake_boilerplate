{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "BUILD_TESTING": "ON",
        "BUILD_ALL_TESTS": "ON",
        "ENABLE_FUZZING": "OFF", 
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "base-windows",
      "hidden": true,
      "inherits": "base",
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": "ninja"
      }
    },
    {
      "name": "base-macos",
      "hidden": true,
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64",
        "CMAKE_MAKE_PROGRAM": "ninja"
      }
    },
    {
      "name": "release",
      "inherits": ["base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_SANITIZERS": "OFF"
      }
    },
    {
      "name": "windows-release",
      "inherits": ["release", "base-windows"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "macos-release",
      "inherits": ["release", "base-macos"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-osx"
      }
    },
    {
      "name": "debug",
      "inherits": ["base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_SANITIZERS": "OFF"
      }
    },
    {
      "name": "windows-debug",
      "inherits": ["debug", "base-windows"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "macos-debug",
      "inherits": ["debug", "base-macos"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-osx"
      }
    },
    {
      "name": "debug-sanitize-address",
      "inherits": ["debug"],
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZER": "address"
      }
    },
    {
      "name": "debug-sanitize-thread",
      "inherits": ["debug"],
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZER": "thread"
      }
    },
    {
      "name": "debug-sanitize-undefined",
      "inherits": ["debug"],
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZER": "undefined"
      }
    },
    {
      "name": "debug-sanitize-leak",
      "inherits": ["debug"],
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZER": "leak"
      }
    },
    {
      "name": "vcpkg-release",
      "inherits": ["release"],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    },
    {
      "name": "vcpkg-windows-release",
      "inherits": ["windows-release"],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    },
    {
      "name": "vcpkg-macos-release",
      "inherits": ["macos-release"],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    },
    {
      "name": "vcpkg-debug",
      "inherits": ["debug"],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    },
    {
      "name": "vcpkg-windows-debug",
      "inherits": ["windows-debug"],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    },
    {
      "name": "vcpkg-macos-debug",
      "inherits": ["macos-debug"],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    },
    {
      "name": "vcpkg-debug-sanitize-address",
      "inherits": ["vcpkg-debug"],
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZER": "address"
      }
    },
    {
      "name": "vcpkg-debug-sanitize-thread",
      "inherits": ["vcpkg-debug"],
      "cacheVariables": {
        "ENABLE_SANITIZERS": "ON",
        "SANITIZER": "thread"
      }
    },
    {
      "name": "fuzz-base",
      "hidden": true,
      "inherits": "debug",
      "cacheVariables": {
        "ENABLE_FUZZING": "ON",
        "ENABLE_SANITIZERS": "ON",
        "SANITIZER": "address",
        "FUZZ_RUNTIME": "60"
      }
    },
    {
      "name": "fuzz-linux",
      "inherits": ["fuzz-base"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "fuzz-windows",
      "inherits": ["fuzz-base", "base-windows"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "fuzz-macos",
      "inherits": ["fuzz-base", "base-macos"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "fuzz-vcpkg",
      "inherits": ["fuzz-base"],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-release",
      "configurePreset": "release"
    },
    {
      "name": "build-windows-release",
      "configurePreset": "windows-release"
    },
    {
      "name": "build-macos-release",
      "configurePreset": "macos-release"
    },
    {
      "name": "build-debug",
      "configurePreset": "debug"
    },
    {
      "name": "build-windows-debug",
      "configurePreset": "windows-debug"
    },
    {
      "name": "build-macos-debug",
      "configurePreset": "macos-debug"
    },
    {
      "name": "build-debug-sanitize-address",
      "configurePreset": "debug-sanitize-address"
    },
    {
      "name": "build-debug-sanitize-thread",
      "configurePreset": "debug-sanitize-thread"
    },
    {
      "name": "build-vcpkg-release",
      "configurePreset": "vcpkg-release"
    },
    {
      "name": "build-vcpkg-windows-release",
      "configurePreset": "vcpkg-windows-release"
    },
    {
      "name": "build-vcpkg-macos-release",
      "configurePreset": "vcpkg-macos-release"
    },
    {
      "name": "build-vcpkg-debug",
      "configurePreset": "vcpkg-debug"
    },
    {
      "name": "build-vcpkg-windows-debug",
      "configurePreset": "vcpkg-windows-debug"
    },
    {
      "name": "build-vcpkg-macos-debug",
      "configurePreset": "vcpkg-macos-debug"
    },
    {
      "name": "build-vcpkg-debug-sanitize-address",
      "configurePreset": "vcpkg-debug-sanitize-address"
    },
    {
      "name": "build-vcpkg-debug-sanitize-thread",
      "configurePreset": "vcpkg-debug-sanitize-thread"
    },
    {
      "name": "build-fuzz",
      "configurePreset": "fuzz-linux",
      "targets": ["fuzz_target"]
    },
    {
      "name": "build-fuzz-windows",
      "configurePreset": "fuzz-windows",
      "targets": ["fuzz_target"]
    },
    {
      "name": "build-fuzz-macos",
      "configurePreset": "fuzz-macos",
      "targets": ["fuzz_target"]
    },
    {
      "name": "build-fuzz-vcpkg",
      "configurePreset": "fuzz-vcpkg",
      "targets": ["fuzz_target"]
    }
  ],
  "testPresets": [
    {
      "name": "test-all",
      "configurePreset": "vcpkg-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-windows-all",
      "configurePreset": "vcpkg-windows-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-macos-all",
      "configurePreset": "vcpkg-macos-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-sanitize-address",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-sanitize-thread",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-library1",
      "configurePreset": "vcpkg-debug",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "name": "^library1_tests"
        }
      }
    },
    {
      "name": "test-library2",
      "configurePreset": "vcpkg-debug",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "name": "^library2_tests"
        }
      }
    },
    {
      "name": "test-fuzz",
      "configurePreset": "fuzz-linux",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "filter": {
        "include": {
          "name": "^fuzz_target$"
        }
      }
    },
    {
      "name": "test-fuzz-short",
      "configurePreset": "fuzz-linux",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "environment": {
        "FUZZ_RUNTIME": "10"
      },
      "filter": {
        "include": {
          "name": "^fuzz_target$"
        }
      }
    },
    {
      "name": "test-fuzz-vcpkg",
      "configurePreset": "fuzz-vcpkg",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "name": "^fuzz_target$"
        }
      }
    }
  ]
}
