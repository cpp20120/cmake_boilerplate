{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19
  },

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/vcpkg-release",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "BUILD_TESTING": "ON",
        "BUILD_ALL_TESTS": "ON",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "release",
      "inherits": [ "base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug",
      "inherits": [ "base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "vcpkg-release",
      "inherits": [ "release" ],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "E:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    },
    {
      "name": "vcpkg-debug",
      "inherits": [ "debug" ],
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "E:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_MANIFEST_DIR": "${sourceDir}",
        "VCPKG_MANIFEST_MODE": "on"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-release",
      "configurePreset": "release",
      "targets": [ "all" ]
    },
    {
      "name": "build-vcpkg-release",
      "configurePreset": "vcpkg-release",
      "targets": [ "all" ]
    }
  ],
  "testPresets": [
    {
      "name": "test-all",
      "configurePreset": "vcpkg-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-library1",
      "configurePreset": "vcpkg-release",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "name": "^library1_tests"
        }
      }
    },
    {
      "name": "test-library2",
      "configurePreset": "vcpkg-release",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "name": "^library2_tests"
        }
      }
    }
  ]
}